/* pages/register/register.wxss */
page {
  background: #eee;
}

.baseInfo {
  padding: 20rpx 10rpx;
}

.baseInfo text {
  font-size: 30rpx;
  color: #6f6f6f;
}

.list {
  color: #6f6f6f;
  font-size: 32rpx;
}

.name,
.sex,
.phone,
.info {
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.name input,
.phone input,
.info input {
  text-align: right;
}

button {
  color: #fff;
  width: 100%;
  margin-top: 50rpx;
}

.modal view {
  text-align: center;
}

.title {
  font-size: 38rpx;
  height: 100rpx;
}

.list view {
  height: 80rpx;
}

.text_price {
  color: #df3033;
  margin-top: 60rpx;
  margin-bottom: 30rpx;
}

.red_packet {
  width: 424rpx;
  height: 606rpx;
  position: absolute;
  left: 150rpx;
  top: 200rpx;
}

.red_packet image {
  width: 424rpx;
  height: 606rpx;
  /* display: inline-block; */
  box-sizing: border-box;
  left: NaNrpx;
  top: NaNrpx;
}

.location {
  width: 80rpx;
  /*flex 布局*/
  display: flex;
  /*实现垂直居中*/
  align-items: center;
  /*实现水平居中*/
  justify-content: center;
}

.location image{
  width:50rpx;
  height:50rpx;
}